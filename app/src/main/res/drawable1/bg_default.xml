<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <item
        tools:height="@dimen/agent_min_height"
        tools:width="@dimen/agent_width">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />
            <solid android:color="@color/colorDefault" />
        </shape>
    </item>
    <item
        android:id="@+id/gradient_area"
        tools:width="@dimen/agent_width">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/colorDefault"
                android:gradientRadius="180%"
                android:startColor="@color/colorBlack"
                android:type="radial" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item
        android:width="2px"
        android:drawable="@drawable/pbv_default_bg_outline_l"
        android:gravity="left"
        android:top="10px"
        tools:height="@dimen/agent_min_height" />
    <item
        android:width="2px"
        android:drawable="@drawable/pbv_default_bg_outline_r"
        android:gravity="right"
        android:top="10px"
        tools:height="@dimen/agent_min_height" />
    <item
        android:height="10px"
        android:drawable="@drawable/pbv_default_bg_outline_t"
        android:gravity="top"
        tools:width="@dimen/agent_width" />
</layer-list>